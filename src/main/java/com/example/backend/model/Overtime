package com.example.backend.model;

import jakarta.persistence.*;
import lombok.Data;
import lombok.AccessLevel;
import lombok.FieldDefaults;
import java.time.LocalDateTime;
import java.util.Set;

@Entity
@Data
@Table(name = "overtime")
@FieldDefaults(level = AccessLevel.PRIVATE)
public class Overtime {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @Column(name = "OvertimeID")
    private int overtimeID;

    @ManyToOne
    @JoinColumn(name = "EmployeeID", nullable = false)
    private User employee;

    @ManyToOne
    @JoinColumn(name = "CreatedBy", nullable = false)
    private User createdBy;

    @Column(name = "ShiftDate", nullable = false)
    private LocalDateTime shiftDate;

    @Column(name = "OverTimeHours", nullable = false)
    private int overTimeHours;

    @OneToMany(mappedBy = "overtime", cascade = CascadeType.ALL, fetch = FetchType.LAZY)
    private Set<TimeAccumulation> timeAccumulations;
}